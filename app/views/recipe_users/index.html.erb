<p id="notice"><%= notice %></p>

<h1>Recipe Users</h1>

<table>
  <thead>
    <tr>
      <th>Recipe</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipe_users.each do |recipe_user| %>
      <tr>
        <td><%= recipe_user.recipe_id %></td>
        <td><%= recipe_user.user_id %></td>
        <td><%= link_to 'Show', recipe_user %></td>
        <td><%= link_to 'Edit', edit_recipe_user_path(recipe_user) %></td>
        <td><%= link_to 'Destroy', recipe_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

