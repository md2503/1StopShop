<%= form_with(model: recipe, local: true) do |form| %>
  <% if recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<br>
<br>
  <div class="form-group" style="margin-left:100px; text-align: center;">
    <%= form.label :name, "Recipe Name", :style => 'margin: auto;'%>
    <%= form.text_field :name, id: :recipe_name, class: "form-control", :style => 'text-align: center; width: 50%; margin: auto;'%>
  </div>

  <div class="form-group" style="margin-left:100px; text-align: center">
    <%= form.label :dietaryreqs, "Suitable for" %>
    <%= form.select :dietaryreqs, [ "None", "Vegan", "Vegetarian", "Diabetic", "Gluten Free", "Nuts allergy", "Meat less", "Lactose free"], class: "form-control" %>
  </div>

  <div class="form-group" style="margin-left:100px; text-align: center">
    <%= form.label :serving %>
    <%= form.number_field :serving, id: :recipe_serving, class: "form-control", :style => 'text-align: center; width: 50%; margin: auto;'%>
  </div>
  
  <div class="form-actions" style="text-align: center; padding-left: 100px; margin: auto;">
    <%= form.submit :class => 'btn btn-primary text-uppercase', :style => 'width: 50%; padding-left: 120px; padding-right: 100px;'%>
  </div>
<% end %>
