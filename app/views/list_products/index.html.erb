<p id="notice"><%= notice %></p>

<h1>List Products</h1>

<table>
  <thead>
    <tr>
      <th>List</th>
      <th>Product</th>
      <th>Quantity</th>
      <th>Availability</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @list_products.each do |list_product| %>
      <tr>
        <td><%= list_product.list_id %></td>
        <td><%= list_product.product_id %></td>
        <td><%= list_product.quantity %></td>
        <td><%= list_product.availability %></td>
        <td><%= link_to 'Show', list_product %></td>
        <td><%= link_to 'Edit', edit_list_product_path(list_product) %></td>
        <td><%= link_to 'Destroy', list_product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New List Product', new_list_product_path %>
