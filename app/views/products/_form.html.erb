
<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group" style="margin-left: 100px; text-align: center;">
    <%= form.label :name, "Product Name", :style => 'text-align: center;' %>
    <%= form.text_field :name, id: :product_name, class: "form-control", :style => 'text-align: center; font-size: 1.6em; width: 50%; margin: auto' %>
  </div>

  <div class="form-group" style="margin-left: 100px; text-align: center;">
    <%= form.label :category %>
    <%= form.select :category, [ "Dairy", "Eggs", "Newspaper", "Magazines", "Fruits", "Vegetables", "Tea/Coffee", "Bakery", "Cereal", "Frozens", "Baby food", "Canned food", "Snacks", "Biscuits", "Pet food" ], class: "form-control" %>
  </div>

  <div class="form-group" style="margin-left: 100px; text-align: center;">
    <%= form.label :price, :style => 'text-align: center;' %>
    <%= form.text_field :price, id: :product_name, class: "form-control", :style => 'text-align: center; font-size: 1.6em; width: 50%; margin: auto' %>

  </div>

  <div class="form-group" style="margin-left: 100px; text-align: center;">
    <%= form.label :brand , :style => 'text-align: center;'%>
    <%= form.text_field :brand, id: :product_brand, class: "form-control", :style => 'text-align: center; font-size: 1.6em; width: 50%; margin: auto' %>

  </div>
  
  <div class="form-actions" style="text-align: center; padding-left: 100px; padding-right: 100px; margin: auto;">
    <%= form.submit :class => 'btn btn-primary text-uppercase', :style => 'width: 50%; padding-left: 100px; padding-right: 100px;'%>
  </div>
<% end %>
